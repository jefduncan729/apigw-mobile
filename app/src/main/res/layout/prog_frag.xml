<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ProgressBar
            android:id="@android:id/progress"
            android:paddingStart="@dimen/activity_vertical_margin_huge"
            android:paddingEnd="@dimen/activity_vertical_margin_huge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            style="@style/ProgressBar" />
        <TextView
            android:id="@android:id/text1"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_horizontal_margin_small"
            android:layout_below="@android:id/progress"
            android:text="@string/app_name"
            android:textAppearance="@style/SmallText"/>
    </RelativeLayout>

</FrameLayout>
