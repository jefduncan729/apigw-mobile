<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/launcher_item_height"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:layout_gravity="center_vertical"
    >
    <ImageView
        android:id="@android:id/icon"
        android:layout_width="@dimen/launcher_image_size"
        android:layout_height="@dimen/launcher_image_size"
        android:layout_margin="@dimen/listitem_medium_margin"
        android:contentDescription="@string/app_name"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/listitem_medium_margin"
        android:layout_toEndOf="@android:id/icon"
        android:layout_toRightOf="@android:id/icon"
        android:orientation="vertical" >
        <TextView
            android:id="@android:id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/LargeText"
            android:paddingTop="@dimen/listitem_small_margin"
            android:paddingLeft="@dimen/listitem_small_margin"
            />

        <TextView
            android:id="@android:id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/MediumText"
            android:paddingLeft="@dimen/listitem_small_margin"
            />
        <!--
                android:paddingLeft="8dip"
                android:paddingBottom="8dip"
                android:paddingTop="8dip"
                    android:layout_toRightOf="@android:id/icon"
                    android:layout_below="@android:id/text1"
        -->
    </LinearLayout>
</RelativeLayout>
