    <style name="AppTheme.Red" parent="AppTheme">
        <item name="android:colorPrimary">@color/primaryRed</item>
        <item name="android:colorPrimaryDark">@color/primaryDarkRed</item>

        <item name="android:colorAccent">@color/accentRed</item>
        <item name="android:actionBarStyle">@style/ActionBarRed</item>
    </style>

    <style name="ActionBar" parent="android:Widget.Material.ActionBar">
        <item name="android:background">@mipmap/a5_header_curves</item>
        <item name="android:logo">@mipmap/ic_axwaylogo</item>
    </style>

    <style name="ActionBarRed"
        parent="android:Widget.Material.ActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyleRed</item>
        <item name="android:background">@color/primaryRed</item>
        <item name="android:elevation">@dimen/action_bar_elevation</item>
    </style>

    <style name="TitleTextStyleRed"
        parent="android:TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionBarTextRed</item>
    </style>

    <style name="SmallText"
        parent="android:TextAppearance.Material.Small">
    </style>

    <style name="SmallTextBold"
        parent="android:TextAppearance.Material.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumText"
        parent="android:TextAppearance.Material.Medium">
    </style>

    <style name="MediumTextBold"
        parent="android:TextAppearance.Material.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeText"
        parent="android:TextAppearance.Material.Large">
    </style>

    <style name="LargeTextBold"
        parent="android:TextAppearance.Material.Large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderTextStyle"
        parent="android:Widget.Material.ActionBar.TabText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <!-- list header text -->
    <style name="ListHeaderTextStyle"
        parent="android:Widget.Material.ActionBar.TabText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:background">@color/axway_blue</item>
    </style>

    <!-- title text -->
    <style name="FragmentTitleTextStyle"
        parent="android:Widget.Material.ActionBar.TabText">
        <item name="android:textColor">@color/axway_blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ProgressBar" parent="android:Widget.Material.Light.ProgressBar.Horizontal"/>
    <style name="CircularProgressBar" parent="android:Widget.Material.Light.ProgressBar"/>
</resources>